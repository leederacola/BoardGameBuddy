@model IList<BoardGameBuddy.Models.BoardGame>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Game Library</title>
</head>
<body>
    <h1>My Board Game Library</h1>
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="col-md-3">
            <h4>
                @Html.ActionLink(Model[i].Title, "Detail", new { id = Model[i].Id })
            </h4>
        </div>
    }
    <h5>@Html.ActionLink("Return Home", "Index")</h5>
</body>
</html>
